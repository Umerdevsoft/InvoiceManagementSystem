                            <!-- Message End -->
                        </a>
                        <hr />
                        <div class="UserDetail" style=" text-align: center;">
                            <div>
                                <a href="#" class="dropdown-item">UserName</a>
                            </div>
                            <div>
                                <a href="#" class="dropdown-item">@User.Identity.Name</a>
                            </div>
                        </div>
                        <div class="dropdown-divider"></div>
