                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-file-invoice"></i>
                                <p>
                                    Invoice
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Invoices" asp-action="AllInvoices" class="nav-link">
                                        <i class="fas fa-file-invoice"></i>
                                        <p>All Invoices</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                        <a asp-controller="Invoices" asp-action="InvoicesOverview" class="nav-link">
