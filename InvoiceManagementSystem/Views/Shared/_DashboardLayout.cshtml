            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        @RenderBody()
                    </div>
                </div><!-- /.container-fluid -->
            </section>
        </div>
        <!-- ./wrapper -->
    </div>
    <footer class="main-footer">
        <div class="float-right d-none d-sm-block">
            <b>Version</b> 3.2.0
