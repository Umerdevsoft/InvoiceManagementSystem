
@{
    ViewData["Title"] = "EditItems";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <h1>Edit Items</h1>
    </div>
    <hr />
    <div class="card Itemformbox">
        <div class="container">
            <form class="form-group">
                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <label>Types:</label>
                        </div>
                        <div class="col-6">
                            <label class="radio-inline">
                                <input type="radio" name="optradio" checked>Goods
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="optradio">Services
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <label>Name</label>
                        </div>
                        <div class="col-8">
                            <input type="text" class="form-control" id="txtitemsName" placeholder="Items Name" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <label>Unit</label>
                        </div>
                        <div class="col-8">
                            <select class="form-control" searchable="Search here..">
                                <option value="" disabled selected>Select</option>
                                <option value="Meter">Meter (m)</option>
                                <option value="Kilogram">Kilogram (kg)</option>
                                <option value="Ampere">Ampere (A)</option>
                                <option value="Kelvin">Kelvin (K)</option>
                                <option value="Candela">Candela (cd)</option>
                                <option value="liter">liter (l)</option>

                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <label>Selling Price</label>
                        </div>
                        <div class="col-8">
                            <input type="text" class="form-control" id="txtsellingPrice" placeholder="PKR" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <label>Description</label>
                        </div>
                        <div class="col-8">
                            <textarea class="form-control" id="txtDescription" placeholder="Description"></textarea>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <label>Tax</label>
                        </div>
                        <div class="col-8">
                            <select class="form-control" searchable="Search here..">
                                <option value="" disabled selected>Select a Tax</option>
                                <option value="5%">5%</option>
                                <option value="10%">10%</option>
                                <option value="20%">20%</option>
                                <option value="30%">30%</option>
                            </select>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <button type="button" class="btn btn-block btn-outline-success btn-lg">Update</button>
                        </div>
                        <div class="col-2">
                            <button type="button" class="btn btn-block btn-outline-danger btn-lg">Cencel</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
