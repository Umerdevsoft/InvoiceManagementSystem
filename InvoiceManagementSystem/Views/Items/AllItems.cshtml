@model IEnumerable<InvoiceManagementSystem.ViewModels.ItemsViewModels>
@{
    ViewData["Title"] = "AllItems";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>ALL ITEMS</h2>
        </div>
    </div>
    <hr />
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="container">
                        <div class="row">
                            <div class="col-8">
                                <div class="form-outline mb-4">
                                    <input type="search" class="form-control" id="datatable-search-input" placeholder="Search">                                
                                </div>
                            </div>
                            <div class="col-4">
                                <a asp-controller="Items" asp-action="AddItems" style="text-align:end"><i class="fa fa-plus"></i>New</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">          
                    <table id="tblItems" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Name</th>
                                <th>Unit</th>
                                <th>SellingPrice</th>
                                <th>Description</th>
                                <th>Tax</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.Type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.Unit)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.SellingPrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.Tax)
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/Theme/Assets/js/DataTableJquery-3.5.1.js"></script>
<script src="~/Theme/Assets/js/Datatable.js"></script>
<script src="~/Theme/Assets/js/AllItems.js"></script>
