
@{
    ViewData["Title"] = "ConfirmPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        <a href="#"><b>Admin</b>LTE</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <h6 class="login-box-msg">PASSWORD UPDATED</h6>
            <div class="container">
                <div class="row tickicon">
                    <div class="col-12" style="text-align:center">
                          <img src="~/Theme/dist/img/tick.png" width="100" height="100" />
                    </div>
                    <div class="col-12">
                        <p style="text-align:center">
                            Your password has been updated!
                        </p>
                    </div>
                    <div class="col-12" style="text-align: center; margin-top: 20px;">
                        <a class="btn btn-primary" asp-controller="Accounts" asp-action="Login">Login</a>
                    </div>                  
                </div>
            </div>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
